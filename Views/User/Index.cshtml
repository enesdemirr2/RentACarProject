@using RentACarProjectDemo.Models.Entity
@model List<Users>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="color:white">Kullanıcılar</h2>
<body style="background-color:white">
</body>

<table class="table users-table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Adı</th>
            <th scope="col">Soyadı</th>
            <th scope="col">Mail</th>
            <th scope="col">Şifre</th>
            <th scope="col">Telefon</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var u in Model)
            {
            <tr>
                <td>@u.UserId</td>
                <td>@u.UserName</td>
                <td>@u.FirstName</td>
                <td>@u.LastName</td>
                <td>@u.Email</td>
                <td>@u.Password</td>
                <td>@u.Telephone</td>
                <td>@Html.ActionLink("Sil", "DeleteUser", new { id = u.UserId }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Silmek istiyor musunuz ? ')" }) </td>
                <td><a href="/User/UpdateUser/@u.UserId" class="btn btn-sm btn-success">Güncelle</a></td>

            </tr>
        }

        </tbody>

    </table>

    <a href="/User/AddUser" class="btn btn-sm btn-primary">Yeni Kullanıcı Ekle</a>
